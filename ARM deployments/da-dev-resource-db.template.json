{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dbsName": {
      "type": "String"
    },
    "dwName": {
      "type": "String"
    },
    "dbName": {
      "type": "String"
    },
    "location": {
      "type": "String"
    },
    "tags": {
      "type": "object"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2017-03-01-preview",
      "name": "[concat(parameters('dbsName'),'/', parameters('dbName'))]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "Standard",
        "tier": "Standard",
        "capacity": 100
      },
      "kind": "v12.0,user",
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 268435456000,
        "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
        "zoneRedundant": false,
        "readScale": "Disabled",
        "readReplicaCount": 0
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases/backupShortTermRetentionPolicies",
      "apiVersion": "2017-10-01-preview",
      "name": "[concat(parameters('dbsName'), '/', parameters('dbName'), '/default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers/databases', parameters('dbsName'), parameters('dbName'))]"
      ],
      "properties": {
        "retentionDays": 7
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases/transparentDataEncryption",
      "apiVersion": "2014-04-01",
      "name": "[concat(parameters('dbsName'), '/', parameters('dbName'), '/current')]",
      "location": "West US 2",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers/databases', parameters('dbsName'), parameters('dbName'))]"
      ],
      "properties": {
        "status": "Enabled"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases/vulnerabilityAssessments",
      "apiVersion": "2017-03-01-preview",
      "name": "[concat(parameters('dbsName'), '/', parameters('dbName'), '/Default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers/databases', parameters('dbsName'), parameters('dbName'))]"
      ],
      "properties": {
        "recurringScans": {
          "isEnabled": false,
          "emailSubscriptionAdmins": true,
          "emails": []
        }
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2017-10-01-preview",
      "name": "[concat(parameters('dbsName'),'/', parameters('dwName'))]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "DW100c",
        "tier": "DataWarehouse",
        "capacity": 900
      },
      "kind": "v12.0,user,datawarehouse,gen2",
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 263882790666240,
        "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
        "readScale": "Disabled",
        "readReplicaCount": 0
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases/transparentDataEncryption",
      "apiVersion": "2014-04-01",
      "name": "[concat(parameters('dbsName'), '/', parameters('dwName'), '/current')]",
      "location": "West US 2",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers/databases', parameters('dbsName'), parameters('dwName'))]"
      ],
      "properties": {
        "status": "Enabled"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases/vulnerabilityAssessments",
      "apiVersion": "2017-03-01-preview",
      "name": "[concat(parameters('dbsName'), '/', parameters('dwName'), '/Default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers/databases', parameters('dbsName'), parameters('dwName'))]"
      ],
      "properties": {
        "recurringScans": {
          "isEnabled": false,
          "emailSubscriptionAdmins": true,
          "emails": []
        }
      }
    }
  ]
}
